{
  "type": "object",
  "comment": "",
  "properties": {
    "category": {
      "type": "select",
      "selector": "[name=\"category_id\"]",
      "control": "select"
    },
    "submit": {
      "type": "action",
      "selector": ".button",
      "selectContains": "Submit Report",
      "control": "action.button"
    },
    "description": {
      "type": "string",
      "selector": "[name=\"description\"]",
      "control": "text"
    },
    "summary": {
      "type": "string",
      "selector": "[name=\"summary\"]",
      "control": "text"
    },
    "isreportissue": {
      "type": "identifier",
      "selector": ".form-title",
      "control": "exists",
      "selectContains": "Enter Report Details"
    },
    "reportanissue": {
      "type": "action",
      "selector": "a",
      "control": "action.link",
      "selectContains": "Report Issue"
    }
  },
  "connect": [
    {
      "match": [
        "isreportissue"
      ],
      "screens": [
        "reportissue"
      ]
    }
  ]
}
